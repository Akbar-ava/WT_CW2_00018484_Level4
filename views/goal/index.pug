extends ../head.pug

block content
  .container.mt-4
    h1.mb-4 Fitness App. Write down your goals!
    h2.mb-4 Goals List
    h3.mb-4 This web application was created to fulfill Web Technology moduleâ€™s requirements and does not represent an actual company or service
    a.btn.btn-success.mb-3(href="/goal/create") Create New Goal
    table.table.table-striped
      thead
        tr
          th ID
          th Weight
          th Goal Type
          th Descprition (Optional)
          th Actions
      tbody
        each goal in goals
          tr
            td= goal.id
            td= goal.weight
            td= goal.goal
            td= goal.description
            td
              a.btn.btn-warning.btn-sm.mr-2(href=`/goal/update/${goal.id}`) Update goal
              span &nbsp;
              a.btn.btn-danger.btn-sm(href=`/api/goal/delete/${goal.id}`) Delete goal
